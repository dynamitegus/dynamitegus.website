---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
const PageColour = "peach";

const dateOptions: object = {
	year: "2-digit",
	month: "numeric",
	day: "numeric",
};

const formattedPublishDate = new Date(frontmatter.pubdate).toLocaleDateString("en-US", dateOptions);



---
<BaseLayout pageTitle={frontmatter.title} PageColour={PageColour}>
<p>Published on: {formattedPublishDate}</p>
<p>Written by {frontmatter.author}</p>
<div class="tags">
    {frontmatter.tags.map((tag: unknown) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
</div>
<slot />
</BaseLayout>
<style>
    a {
        color: #00539F;
    }

    .tags {
         display: flex;
         flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>