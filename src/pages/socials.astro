---
import ShortLinks from "../components/ShortLinks.astro";
import ShortLinksHover from "../components/ShortLinksHover.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import TypingTextDemo from "../components/TypingTextComponent.tsx";
import "@fontsource/ubuntu-mono";
import SocialList from "@/components/SocialList.astro";

const pageTitle = "Socials";
const PageColour = "text-lime";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import Header from "../components/Header.astro";
---

<html lang="en" class="bg-base text-text">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="me" href="https://mastodon.social/@dynamitegus" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="fediverse:creator" content="@dynamitegus@mastodon.social" />
    <title>{pageTitle}</title>
  </head>
  <body
    class="sm:mx-5 md:mx-20 lg:mx-40 xl:mx-70 2xl:mx-90 my-0 px-4 bg-center h-screen">
    <Header />
    <div class="">
      <div class="items-centern inset-x-0">
        <div class="grid grid-cols-1 bg-center text-center mx-auto w-120">
          <img
            class="bg-[black] rounded-3xl w-60 items-center m-auto"
            src="/favicon.svg"
          /><br />
          <h2 class="text-6xl my-2 text-magenta text-center">dynamitegus</h2>

          <span class="monospace_font"><TypingTextDemo client:load /></span>
          <style>
            .monospace_font {
              font-family: "Ubuntu Mono", monospace;
              font-weight: bold;
            }
          </style>
          <SocialList
            link="dynamitegus.au"
            platform="dynamitegus"
            icon="/icons/apple.svg"
            PageColour={PageColour}
          />
        </div>
      </div>
    </div>
    <div class="items-center inset-x-0">
      <Footer PageColour=`${PageColour}` />
    </div>
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
