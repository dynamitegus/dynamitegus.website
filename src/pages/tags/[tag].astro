---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from "astro:content";
import BlogPost from '../../components/BlogPost.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");

  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const PageColour = "text-teal";
---

<BaseLayout pageTitle=`Posts tagged with ${tag}` PageColour={PageColour}>
  <ul>
    {posts.map((post) => <BlogPost id={post.id} pubDate={post.data.pubDate} title={post.data.title} description={post.data.description}/>)}
  </ul>
</BaseLayout>